<mvc:View
  height="100%"
  controllerName="com.tmhew.app.cv.controller.Index"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  xmlns:uxap="sap.uxap"
  xmlns:core="sap.ui.core">
  
  <uxap:ObjectPageLayout
    showFooter="true">
    <uxap:headerTitle>
      <uxap:ObjectPageDynamicHeaderTitle>
        <uxap:expandedHeading>
          <m:Title text="Tau Ming, Hew" wrapping="true" />
        </uxap:expandedHeading>

        <uxap:snappedHeading>
          <m:HBox>
            <m:VBox>
              <m:Title text="Tau Ming, Hew" wrapping="true" />
              <m:ObjectStatus 
                text="Open to Work" 
                state="Success" 
                inverted="true" 
                class="sapUiSmallMarginTop sapUiSmallMarginBottom"/>
            </m:VBox>
          </m:HBox>
        </uxap:snappedHeading>

        <uxap:actions>
          <m:Button
            type="Emphasized"
            icon="sap-icon://business-card" 
            text="Connect with me"
            tooltip="LinkedIn" 
            press=".onContactMePressed" />
        </uxap:actions>

      </uxap:ObjectPageDynamicHeaderTitle>
    </uxap:headerTitle>

    <uxap:headerContent>
      <m:FlexBox wrap="Wrap" fitContainer="true">
        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
          <m:Title text="Personal Information" class="sapUiTinyMarginBottom" />
          <m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="First name:" class="sapUiTinyMarginEnd"/>
						<m:Text text=" Tau Ming"/>
					</m:HBox>
          <m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="Last name:" class="sapUiTinyMarginEnd"/>
						<m:Text text=" Hew"/>
					</m:HBox>
          <m:HBox class="sapUiTinyMarginBottom">
						<core:Icon src="sap-icon://map"/>
						<m:Link 
              class="sapUiSmallMarginBegin"
              text=" Houston, TX" 
              target="_blank"
              href="https://goo.gl/maps/SPDy8azNTBmQURoz5" />
					</m:HBox>
        </m:VBox>

        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title text="About Me" class="sapUiTinyMarginBottom" />
					<m:Text  width="320px" text="Excels in using complex and expensive tools to do simple tasks." />
				</m:VBox>

        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title text="Availability" class="sapUiTinyMarginBottom" />
					<m:ObjectStatus text="Open to Work" state="Success" class="sapMObjectStatusLarge"/>
				</m:VBox>
      </m:FlexBox>
    </uxap:headerContent>

    <uxap:footer>
      <m:OverflowToolbar>
        <m:Button icon="sap-icon://syntax" tooltip="Source code" press=".onSourceCodeButtonPressed" />
        <m:ToolbarSpacer/>
        <m:Button icon="sap-icon://dark-mode" tooltip="Theme" press=".onThemeButtonPressed" />
      </m:OverflowToolbar>
    </uxap:footer>
  </uxap:ObjectPageLayout>
  
</mvc:View>
