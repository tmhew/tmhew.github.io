<mvc:View
  height="100%"
  controllerName="com.tmhew.app.cv.controller.Index"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  xmlns:uxap="sap.uxap">
  
  <uxap:ObjectPageLayout
    showFooter="true">
    <uxap:headerTitle>
      <uxap:ObjectPageDynamicHeaderTitle>
        <uxap:expandedHeading>
          <m:Title text="Tau Ming, Hew" wrapping="true" />
        </uxap:expandedHeading>

        <uxap:snappedHeading>
          <m:HBox>
            <m:VBox>
              <m:Title text="Tau Ming, Hew" wrapping="true" />
              <m:ObjectStatus 
                text="Open to Work" 
                state="Success" 
                inverted="true" 
                class="sapUiSmallMarginBottom"/>
            </m:VBox>
          </m:HBox>
        </uxap:snappedHeading>

        <uxap:actions>
          <m:Button
            type="Emphasized"
            icon="sap-icon://business-card" 
            text="Connect with me"
            tooltip="LinkedIn" 
            press=".onContactMePressed" />
        </uxap:actions>

      </uxap:ObjectPageDynamicHeaderTitle>
    </uxap:headerTitle>

    <uxap:headerContent>
      <m:ObjectAttribute title="" text="Excels in using complex and expensive tools to do simple tasks."/>
    </uxap:headerContent>

    <uxap:footer>
      <m:OverflowToolbar>
        <m:Button icon="sap-icon://syntax" tooltip="Source code" press=".onSourceCodeButtonPressed" />
        <m:ToolbarSpacer/>
        <m:Button icon="sap-icon://dark-mode" tooltip="Theme" press=".onThemeButtonPressed" />
      </m:OverflowToolbar>
    </uxap:footer>
  </uxap:ObjectPageLayout>
  
</mvc:View>
