<mvc:View
  height="100%"
  controllerName="com.tmhew.app.cv.controller.Index"
  xmlns="sap.uxap"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core">
  
  <ObjectPageLayout showFooter="true">
    <headerTitle>
      <ObjectPageDynamicHeaderTitle>
        <expandedHeading>
          <m:Title text="Tau Ming, Hew" wrapping="true" />
        </expandedHeading>

        <snappedHeading>
          <m:HBox>
            <m:VBox>
							<m:Avatar src="sap-icon://Netweaver-business-client" class="sapUiSmallMarginEnd" />
						</m:VBox>
            <m:VBox>
              <m:Title text="Tau Ming, Hew" wrapping="true" />
              <m:HBox>
                <m:ObjectStatus 
                  text="Open to Work" 
                  state="Success" 
                  inverted="true" 
                  class="sapUiSmallMarginTopBottom"/>
                <m:ObjectStatus 
                  text="SAP Consultant" 
                  state="Information" 
                  inverted="true" 
                  class="sapUiSmallMarginTopBottom sapUiSmallMarginBegin"/>
                <m:ObjectStatus 
                  text="Indie Developer" 
                  state="Information" 
                  inverted="true" 
                  class="sapUiSmallMarginTopBottom sapUiSmallMarginBegin"/>
              </m:HBox>
            </m:VBox>
          </m:HBox>
        </snappedHeading>

        <actions>
          <m:Button
            type="Emphasized"
            icon="sap-icon://business-card" 
            text="Connect with me"
            tooltip="LinkedIn" 
            press=".onContactMePressed" />
        </actions>

      </ObjectPageDynamicHeaderTitle>
    </headerTitle>

    <headerContent>
      <m:FlexBox wrap="Wrap" fitContainer="true">
        <m:Avatar src="sap-icon://Netweaver-business-client" class="sapUiMediumMarginEnd sapUiSmallMarginBottom" displaySize="L"/>

        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
          <m:Title text="Personal Information" class="sapUiTinyMarginBottom" />
          <m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="First name:" class="sapUiTinyMarginEnd"/>
						<m:Text text=" Tau Ming"/>
					</m:HBox>
          <m:HBox class="sapUiTinyMarginBottom">
						<m:Label text="Last name:" class="sapUiTinyMarginEnd"/>
						<m:Text text=" Hew"/>
					</m:HBox>
          <m:HBox class="sapUiTinyMarginBottom">
						<core:Icon src="sap-icon://map"/>
						<m:Link 
              class="sapUiSmallMarginBegin"
              text=" Houston, TX" 
              target="_blank"
              href="https://goo.gl/maps/SPDy8azNTBmQURoz5" />
					</m:HBox>
        </m:VBox>

        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title text="Availability" class="sapUiTinyMarginBottom" />
					<m:ObjectStatus text="Open to Work" state="Success" class="sapMObjectStatusLarge"/>
				</m:VBox>
      </m:FlexBox>
    </headerContent>

    <sections>
      <ObjectPageSection titleUppercase="false" title="About Me"> 
        <subSections>
          <ObjectPageSubSection>
            <blocks>
              <m:Text text="I excel in using complex and expensive tools to do simple tasks." />
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>

    <footer>
      <m:OverflowToolbar>
        <m:Button icon="sap-icon://syntax" tooltip="Source code" press=".onSourceCodeButtonPressed" />
        <m:ToolbarSpacer/>
        <m:Button 
          icon="sap-icon://{= ${view>/themeMode} === 'light' ? 'dark' : 'light'}-mode" 
          tooltip="Theme" 
          press=".onThemeButtonPressed" />
      </m:OverflowToolbar>
    </footer>
  </ObjectPageLayout>
  
</mvc:View>
